# Stage 1: Build React App
FROM --platform=$BUILDPLATFORM node:12-alpine AS builder

WORKDIR /app

# ğŸ§  Copy dependency descriptors first
COPY package.json package-lock.json ./

# âš¡ Install dependencies
RUN npm ci

# ğŸ“¦ Copy source code
COPY . .

# ğŸ—ï¸ Build React app
RUN npm run build

# Stage 2: Serve with Nginx
FROM --platform=$TARGETPLATFORM nginx:alpine

# ğŸšš Copy built static files
COPY --from=builder /app/build /usr/share/nginx/html

# ğŸ§¾ Custom Nginx config (optional)
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

# ğŸŒ Expose HTTP port
EXPOSE 80

# ğŸš€ Start Nginx
CMD ["nginx", "-g", "daemon off;"]